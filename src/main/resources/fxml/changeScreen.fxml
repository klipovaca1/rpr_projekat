<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
        <ColumnConstraints halignment="LEFT" hgrow="NEVER" maxWidth="180.0" minWidth="180.0" prefWidth="180.0" />
        <ColumnConstraints halignment="CENTER" hgrow="NEVER" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER" vgrow="NEVER" />
        <RowConstraints valignment="CENTER" vgrow="NEVER" />
        <RowConstraints valignment="CENTER" vgrow="NEVER" />
        <RowConstraints valignment="CENTER" vgrow="NEVER" />
        <RowConstraints valignment="CENTER" vgrow="NEVER" />
        <RowConstraints valignment="CENTER" vgrow="NEVER" />
    </rowConstraints>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    <ButtonBar GridPane.columnSpan="4" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <buttons>
            <Button fx:id="confirmButton" defaultButton="true" mnemonicParsing="false" onAction="#changeCredentials" text="Confirm" />
            <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#closeChange" text="Close" />
        </buttons>
        <GridPane.margin>
            <Insets top="10.0" />
        </GridPane.margin>
    </ButtonBar>
    <Label text="Old name:" GridPane.columnIndex="1" />
    <Label text="New name:" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="Old password:" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="New password:" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Confirm password:" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <TextField fx:id="oldNameField" GridPane.columnIndex="2" />
    <TextField fx:id="newNameField" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <PasswordField fx:id="oldPasswordField" GridPane.columnIndex="2" GridPane.rowIndex="2" />
    <PasswordField fx:id="newPasswordField" GridPane.columnIndex="2" GridPane.rowIndex="3" />
    <PasswordField fx:id="confirmationPasswordField" GridPane.columnIndex="2" GridPane.rowIndex="4" />
</GridPane>